<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvatarSelectActivity"
    android:background="@color/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/avatarselect_top"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:insetRight="0dp"
                android:insetLeft="0dp"
                app:cardCornerRadius="25dp"
                android:elevation="10dp"
                app:cardBackgroundColor="@color/movie_red"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/back_arrow_white"
                    android:layout_gravity="center"></ImageView>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/chooseavatartitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Choose your Avatar"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textColor="@color/movie_red"
                android:layout_gravity="center"></TextView>

        </LinearLayout>

        <GridLayout
            android:layout_below="@+id/avatarselect_top"
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:columnCount="2">
            <ImageView
                android:id="@+id/astronaut"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/astronaut"
                android:layout_marginBottom="50dp"
                android:layout_columnWeight="1"></ImageView>
            <ImageView
                android:id="@+id/shipcaptain"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/shipcaptain"
                android:layout_columnWeight="1"></ImageView>
            <ImageView
                android:id="@+id/waitress"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginBottom="50dp"
                android:src="@drawable/waitress"
                android:layout_columnWeight="1"></ImageView>
            <ImageView
                android:id="@+id/concierge"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/concierge"
                android:layout_columnWeight="1"></ImageView>
            <ImageView
                android:id="@+id/chef"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/chef"
                android:layout_columnWeight="1"></ImageView>
            <ImageView
                android:id="@+id/nurse"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/nurse"
                android:layout_columnWeight="1"></ImageView>

        </GridLayout>
    </RelativeLayout>





</androidx.constraintlayout.widget.ConstraintLayout>